
# Turn rewrite engine on
Options +FollowSymlinks
RewriteEngine on

# ======== Map URIs ========= #

# Users
RewriteRule ^users/list/?$ ws/test.php?entity=users&args [nc,qsa]
RewriteRule ^users/list/([A-Za-z0-9]+=*)/?$ ws/test.php?entity=users&args=$1 [nc,qsa]
RewriteRule ^users/insert/([A-Za-z0-9]+=*)/?$ ws/test.php?entity=users&action=insert&args=$1 [nc,qsa]
RewriteRule ^users/update/([A-Za-z0-9]+=*)/?$ ws/test.php?entity=users&action=update&args=$1 [nc,qsa]
RewriteRule ^users/delete/([A-Za-z0-9]+=*)/?$ ws/test.php?entity=users&args=$1 [nc,qsa]

